<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QCS Admin - @ViewData["Title"]</title>

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <link href="~/css/devextreme/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/devextreme/dx.light.compact.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        body {
            /* ไม่ต้อง padding-top เยอะแล้ว เพราะ menu จะอยู่ flow ปกติ หรือ fixed ก็ได้ */
            background-color: #f4f6f9;
        }

        /* จัด Style ให้ Menu บาร์ดูสวยงามเหมือน Navbar */
        .main-menu-container {
            background-color: #343a40; /* สี Dark แบบ Bootstrap */
            padding: 0 15px;
            display: flex;
            align-items: center;
            height: 50px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }

        .app-brand {
            color: #fff;
            font-size: 1.25rem;
            font-weight: 600;
            margin-right: 20px;
            text-decoration: none;
            display: flex;
            align-items: center;
        }

            .app-brand:hover {
                color: #ddd;
            }

        /* ปรับสี dxMenu ให้เข้ากับ Dark Theme */
        #topMenu .dx-menu-item {
            color: #rgba(255,255,255,0.8) !important;
        }

            #topMenu .dx-menu-item.dx-state-hover {
                background-color: rgba(255,255,255,0.1) !important;
                color: #fff !important;
            }

        #topMenu .dx-menu-item-text {
            color: #fff;
        }
        /* แก้สีลูกศร Dropdown */
        .dx-menu-item-popout {
            color: #fff !important;
        }

        .main-content {
            margin-top: 60px; /* เว้นที่ให้ Menu Bar */
            min-height: calc(100vh - 120px);
            padding-bottom: 2rem;
        }

        .gridContainer {
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border-radius: 0.25rem;
        }

        footer {
            background-color: #fff;
            border-top: 1px solid #dee2e6;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)

    <script src="~/js/devextreme/jquery.js"></script>
    <script src="~/js/devextreme/bootstrap.js"></script>

    <script src="~/js/devextreme/filesaver.min.js"></script>
    <script src="~/js/devextreme/exceljs.min.js"></script>

    <script src="~/js/devextreme/dx.all.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.mvc.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.data.js"></script>

    <script src="~/src/devextreme-license.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("ExternalDependencies", required: false)
</head>

<body>
    <div class="main-menu-container">
        <a class="app-brand" href="@Url.Action("Index", "Home")">
            <i class="fa-solid fa-tree me-2"></i> QCS Admin
        </a>

        <div id="topMenu" style="flex-grow: 1;"></div>
    </div>

    <main role="main" class="main-content container-fluid">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 text-muted text-center text-small">
        <div class="container-fluid">
            <span class="text-muted">&copy; @DateTime.Now.Year - Quotation Comparison System (QCS)</span>
        </div>
    </footer>

    <script src="~/lib/font-awesome/js/all.min.js"></script>

    <environment names="Development">
        <script src="~/host/development.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/host/production.js"></script>
    </environment>

    <script>
        $(function () {
            $("#topMenu").dxMenu({
                dataSource: [
                    {
                        text: "Dashboard",
                        icon: "home",
                        path: "@Url.Action("Index", "Home")"
                    },
                    {
                        text: "Documents",
                        icon: "file",
                        items: [
                            { text: "ใบขอซื้อ (Purchase Requests)", icon: "cart", path: "@Url.Action("PurchaseRequest", "Home")" },
                            { text: "ใบเสนอราคา (Quotations)", icon: "doc", path: "@Url.Action("Quotation", "Home")" }
                        ]
                    },
                    {
                        text: "Settings",
                        icon: "preferences",
                        items: [
                            { text: "ลำดับการอนุมัติ (Approval Steps)", icon: "orderedlist", path: "@Url.Action("ApprovalStep", "Home")" },
                            { text: "จัดการผู้ใช้งาน (Users)", icon: "group", path: "#" } // ใส่ URL จริงทีหลัง
                        ]
                    }
                ],
                displayExpr: "text",
                showFirstSubmenuMode: "onHover",
                orientation: "horizontal",
                hideSubmenuOnMouseLeave: true,
                onItemClick: function (e) {
                    if (e.itemData.path && e.itemData.path !== "#") {
                        window.location.href = e.itemData.path;
                    }
                },
                // ปรับแต่ง CSS Class ให้ดู Modern ขึ้น
                cssClass: "my-custom-menu"
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>