@using QCS.Web.User.Models
@model ComparisonViewModel

<h2>พิจารณาอนุมัติ: @Model.Title</h2>

<div class="card mb-3">
    <div class="card-header">เปรียบเทียบราคา (Quotation Comparison)</div>
    <div class="card-body">
        <div id="comparisonGrid"></div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form method="post">
            <input type="hidden" name="stepId" value="@Model.CurrentStepId" />

            <div class="mb-3">
                <label>ความเห็นเพิ่มเติม (Comment)</label>
                <textarea name="comment" class="form-control" rows="3"></textarea>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" asp-action="Approve" class="btn btn-success btn-lg">
                    <i class="fas fa-check"></i> อนุมัติ (Approve)
                </button>
                <button type="submit" asp-action="Reject" class="btn btn-danger btn-lg">
                    <i class="fas fa-times"></i> ไม่อนุมัติ (Reject)
                </button>
            </div>
        </form>
    </div>
</div>